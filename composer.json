{
  "name": "scalecore/amazon-ads-api",
  "type": "library",
  "description": "Amazon Ads API Client Library",
  "keywords": [
    "framework",
    "amazon",
    "advertising api",
    "amazon ads api",
    "client"
  ],
  "homepage": "https://scalecore.ai/",
  "license": "MIT",
  "authors": [
    {
      "name": "Jason Hebert",
      "email": "jason.hebert@powersrc.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "ScaleCore\\": "src/ScaleCore/"
    },
    "files": [
      "src/ScaleCore/AmazonAds/Helpers/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "ScaleCore\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1.0",
    "ext-curl": "*",
    "ext-json": "*",
    "ext-zlib": "*",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/log": "^1.1",
    "square/pjson": "^0.2.0"
  },
  "require-dev": {
    "dg/bypass-finals": "^1.4",
    "friendsofphp/php-cs-fixer": "^3.11",
    "kriswallsmith/buzz": "^1.2",
    "nyholm/psr7": "^1.5",
    "pestphp/pest": "^1.22",
    "pestphp/pest-plugin-mock": "^1.0",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpro/grumphp": "^1.13",
    "phpstan/phpstan": "^1.9"
  },
  "scripts": {
    "test": "vendor/bin/pest --coverage",
    "grumphp-run": "vendor/bin/grumphp run",
    "fix-style": "vendor/bin/php-cs-fixer fix -v --allow-risky=yes",
    "phpstan-run": "vendor/bin/phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpro/grumphp": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
